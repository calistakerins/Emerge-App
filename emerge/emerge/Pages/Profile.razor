@page "/profile"

<NavBar/>
<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Medium">
        @if (loggedIn is false)
        {
            <MudText Typo="Typo.h5" Class="red-text">Browsing Anonymously</MudText>
            <MudText Typo="Typo.h6" Class="pt-2">Sign up or log in to receive more personalized news</MudText>

            <MudButton Href="/"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Class="mt-8"
                           @onclick="Login">Log In</MudButton>
       
        }

        @if (loggedIn is not false)
        {
            <MudText Typo="Typo.h2" Color="Color.Primary">Hi, @name</MudText>
            <MudText Typo="Typo.h5" Class="pt-2"><b>@county</b></MudText>

            <MudButton Class="mt-8 mb-8" Href="/depts" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">View Followed Departments</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" @onclick="SignOut" Href="/">Sign Out</MudButton>
        }
    </MudContainer>
</MudMainContent>

@code {
    public string name { get; set; } = "Jane";
    public string county { get; set; } = "King County";
    public bool loggedIn = false;

    void SignOut()
    {
        // TODO: Sign out action
    }

    void Login()
    {
        // TODO: Login action
    }
}